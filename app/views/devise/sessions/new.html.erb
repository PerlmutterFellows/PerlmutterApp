<div class="full-page d-flex justify-content-center align-items-center sessions-background">
  <div class="m-4 shadow w-md-50 h-75 row no-gutters justify-content-center align-items-center bg-light">
    <h1 class="m-3 display-3 text-center text-primary">
      <%= simple_format t '.welcome', organization_name: "The Haven Project" %>
    </h1>
      <div class="p-2 w-md-75">
        <h3 class="font-weight-light mb-1"><%= t '.login' %></h3>
        <h4 class="font-weight-lighter"><%= t '.login_prompt' %></h4>
        <hr />
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, label_as_placeholder: true, input_group_class: 'input-group-lg', autocomplete: "email" %>
          <%= f.password_field :password, autocomplete: "current-password", label_as_placeholder: true, input_group_class: 'input-group-lg' %>

          <% if devise_mapping.rememberable? %>
            <div class="mb-2">
              <%= f.check_box :remember_me, custom: :switch, control_class: "text-secondary"%>
            </div>
          <% end %>
          <%= f.submit "Log in" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
