<div class="w-100 mb-3">
<%= bootstrap_form_tag(url: contact_path, remote: true) do |f| %>
  <%= f.text_field :subject, label: I18n.t("events.title"), autofocus: true, required: true, label_as_placeholder: true, pattern: ".{1,100}", title: I18n.t("global.error_length", length: "100"), height: "100%", input_group_class: 'input-group-lg' %>
  <%= f.text_field :body, label: I18n.t("events.message"), autofocus: true, required: true, label_as_placeholder: true, pattern: ".{1,1000}", title: I18n.t("global.error_length", length: "1000"), height: "100%", input_group_class: 'input-group-lg' %>
  <%= f.text_field :name, label: I18n.t("groups.name"), autofocus: true, required: true, label_as_placeholder: true, pattern: ".{1,100}", title: I18n.t("global.error_length", length: "100"), height: "100%", input_group_class: 'input-group-lg' %>
  <%= f.text_field :contact, label: I18n.t("static_pages.contact.method"), autofocus: true, required: true, pattern: ".{1,100}", title: I18n.t("global.error_length", length: "100"), label_as_placeholder: true, height: "100%", input_group_class: 'input-group-lg' %>
  <div class='btn-group mb-1 d-flex justify-content-center' role='group'>
    <%= f.submit I18n.t("global.submit"), name: :email, class: "btn btn-primary" %>
  </div>
<% end %>
</div>